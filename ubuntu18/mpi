FROM laristra/spack-base:ubuntu18_tmp

SHELL ["/bin/bash", "-c"]

ENV DEBIAN_FRONTEND=noninteractive \
    HOME=/home/flecsi \
    BASH_ENV=~/.bashrc

USER flecsi
WORKDIR $HOME

RUN spack install --show-log-on-error mpich && \
    spack install --show-log-on-error openmpi && \
    spack clean --all

ENTRYPOINT ["entrypoint.sh"]
CMD ["/bin/bash"]
