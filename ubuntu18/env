FROM laristra/spack-buildenv:ubuntu18_tmp

SHELL ["/bin/bash", "-c"]

ENV DEBIAN_FRONTEND=noninteractive \
    HOME=/home/laristra \
    BASH_ENV=~/.bashrc

USER laristra
WORKDIR $HOME

RUN spack install --show-log-on-error flecsi-deps%gcc backend=legion +hdf5 ^mpich && \
    spack install --show-log-on-error flecsi-deps%gcc backend=hpx +hdf5 ^openmpi && \
    spack clean --all

ENTRYPOINT ["entrypoint.sh"]
CMD ["/bin/bash"]
