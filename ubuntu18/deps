FROM laristra/spack-buildenv:ubuntu18_tmp

SHELL ["/bin/bash", "-c"]

ENV DEBIAN_FRONTEND=noninteractive \
    HOME=/home/laristra \
    BASH_ENV=~/.bashrc

USER laristra
WORKDIR $HOME

RUN spack install --show-log-on-error boost && \
    spack install --show-log-on-error hdf5 && \
    spack install --show-log-on-error caliper && \
    spack clean --all

ENTRYPOINT ["entrypoint.sh"]
CMD ["/bin/bash"]
